<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.database.dao.StudentMapper">


    <!--    一对多关系-->
    <resultMap id="studentDto" type="org.example.database.dto.StudentDto">
        <id property="id" column="id"></id>
        <result property="age" column="age"></result>
        <result property="name" column="name"></result>
        <collection property="toys" ofType="org.example.database.entity.Toy">
            <id property="id" column="t_id"></id>
            <result property="studentId" column="student_id"></result>
            <result property="name" column="t_name"></result>
        </collection>
    </resultMap>




    <select id="findBookById" parameterType="Integer"
            resultType="org.example.database.entity.Student">
        select *
        from student
        where id = #{id}
    </select>

    <select id="getAllStudents" resultMap="studentDto">
        select s.id, s.name, s.age, t.id t_id, t.student_id, t.name t_name
        from student s
                 left join toy t on s.id = t.student_id
    </select>

    <delete id="deleteById">
        delete from student where id = #{id}
    </delete>
</mapper>